<div class="container">
  <div class="row">
    <div class="col">
      <% if notice %>
        <div class="notice alert alert-primary" role="alert"><%= notice %></div>
      <% elsif alert %>
        <div class="alert alert-danger" role="alert"><%= alert %></div>
      <% end %>
    </div>
  </div>
</div>
